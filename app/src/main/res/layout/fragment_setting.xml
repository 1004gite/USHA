<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="setting"
            type="com.example.usha.setting.SettingFragment" />
    </data>

    <FrameLayout
        android:id="@+id/fragment_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setting.SettingFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:background="@android:color/transparent"
                    android:id="@+id/settingBackBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="설정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="이용약관"
                android:id="@+id/TermsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="#00FFFFFF"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                android:textSize="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"
                />
            <TextView
                android:text="개인정보 처리방침"
                android:id="@+id/PolicyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="#00FFFFFF"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="10dp"
                android:paddingVertical="8dp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"

                />

            <TextView
                android:text="로그아웃"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="10dp"
                android:paddingVertical="8dp"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"
                />

            <TextView
                android:text="회원탈퇴"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="10dp"
                android:paddingVertical="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#E1E1E1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=
                    "📬 Contact"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="불편함, 건의사항, 협업제안 등은 아래로 편하게 말씀해주세요!\n고객님들의 목소리를 귀담아 듣고,\n더 발전하는 헤딩웜이 되겠습니다.\n"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="익명 1:1 오픈채팅 : "
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/CopyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="링크복사" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=
                    "이메일 문의하기 : headingwarm10@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#7C7C7C"
                android:layout_marginTop="15dp"
                />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>